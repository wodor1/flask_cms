{% extends 'base.html.j2' %}
{% block title %} Edit post {% endblock %}

{% block content %}
<h1>Edit post</h1>

<form action="/post/edit/{{post_id}}" method="POST" class="form-group" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" class="form-control" required value="{{ form.title.data }}">
    </div>

    <div class="form-group">
        <label for="teaser_image">Teaser Image</label>
        <input type="file" id="teaser_image" name="teaser_image" class="form-control">
    </div>

    <div class="form-group">
        <label for="body">Body</label>
        <textarea id="body" name="body" class="form-control" required>{{ form.body.data }}</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save post</button>
</form>
{% endblock %}
